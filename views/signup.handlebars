<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card p-3 mt-4">
            <h2 class="signup">Sign Up</h2>

            <form class="form signup-form">
                <div class="form-group">
                    <input class="form-input form-control" type="text" placeholder="Username" id="username-signup" />
                </div>

                <div class="form-group">
                    <input class="form-input form-control" type="password" placeholder="Password" id="password-signup" />
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Signup</button>
                </div>
            </form>
            <div>
                <a class="btn btn-secondary" href="/login">Login Instead</a>
            </div>
        </div>
    </div>
</div>

<script src="./js/signUp.js"></script>