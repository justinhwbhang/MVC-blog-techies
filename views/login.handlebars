<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card p-3 mt-4">
            <h2 class="login">Login</h2>
            <form class="form login-form">
                <div class="form-group">
                    <input class="form-input form-control" type="text" placeholder="Username" id="username-login" />
                </div>
                <div class="form-group">
                    <input class="form-input form-control" type="password" placeholder="Password" id="password-login" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
                <div>
                    <a class="btn btn-secondary" href="/signUp">Sign Up Instead</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>